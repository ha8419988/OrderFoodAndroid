<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/back2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/orderfoodbackground"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-241dp" />

    <LinearLayout
        android:layout_width="275dp"
        android:layout_height="390dp"
        android:background="@drawable/background_shape"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/back2"
        app:layout_constraintVertical_bias="0.498">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingLeft="38dp"
            android:paddingTop="10dp"
            android:text="ORDER FOOD"
            android:textSize="30sp"
            android:textColor="#F10910"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btn_signin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btnbluies"
            android:drawableLeft="@drawable/ic_baseline_phone_iphone_24"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:text="Sign in" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TableRow
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                android:layout_width="90dp"
                android:layout_height="1dp" />
            <TextView
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:text="OR"/>
            <TableRow
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                android:layout_width="100dp"
                android:layout_height="1dp" />
        </LinearLayout>
        <Button
            android:id="@+id/btn_signup"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_shape"
            android:gravity="center"
            android:drawableLeft="@drawable/muiten"
            android:paddingLeft="18dp"
            android:text="Sign up" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>